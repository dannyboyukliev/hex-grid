<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="HexGridView">
        <attr name="rowCount" format="integer" />
        <attr name="columnCount" format="integer" />
        <attr name="insetEvenLines" format="boolean" />
        <attr name="enableEdgeLines" format="boolean" />
        <attr name="fitMode" format="enum">
            <enum name="fitColumns" value="0" />
            <enum name="fitRows" value="1" />
        </attr>
        <attr name="crossMode" format="enum">
            <enum name="alignCenter" value="0" />
            <enum name="alignStart" value="1" />
            <enum name="alignEnd" value="2" />
            <enum name="scaleToFit" value="3" />
        </attr>
        <attr name="hexOrientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeColor" format="color" />
        <attr name="fillColor" format="color" />
        <attr name="selectColor" format="color" />
        <attr name="indexColor" format="color" />
        <attr name="cellIndices" format="enum">
            <enum name="none" value="0" />
            <enum name="both" value="1" />
            <enum name="rows" value="2" />
            <enum name="columns" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="HexGridView_Layout">
        <attr name="layout_rowAndColumn" format="string" />
        <attr name="layout_cellIsVisible" format="boolean" />
        <attr name="layout_cellIsSelected" format="boolean" />
        <attr name="layout_hexBackgroundColor" format="color" />
        <attr name="layout_hexBackgroundInset" format="dimension" />
    </declare-styleable>

</resources>